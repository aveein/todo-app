<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <!-- Stylesheet -->
    <link rel="stylesheet" href="date-time/css/bootstrap-datetimepicker.css" />

    <link rel="stylesheet" href="style.css" />
    <title>Todo App</title>
  </head>
  <body>
    <section class="gradient-custom-2">
      <div class="container py-5">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col">
            <div
              class="card"
              id="list1"
              style="border-radius: 0.75rem; background-color: #eff1f2"
            >
              <!-- show modal -->
              <%- include('./partials/modal.ejs') %> <%-
              include('./partials/update-modal.ejs') %>
              <div class="card-body py-4 px-4 px-md-5">
                <div class="text-center pt-3 pb-2">
                  <img
                    src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-todo-list/check1.webp"
                    alt="Check"
                    width="60"
                  />
                  <h2 class="my-4">Task List</h2>
                </div>
                <div class="d-flex flex-row-reverse">
                  <button
                    type="button"
                    data-mdb-button-init
                    data-mdb-ripple-init
                    class="btn btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#exampleModal"
                  >
                    Add
                  </button>
                </div>

                <hr class="my-2" />

                <div
                  class="d-flex justify-content-end align-items-center mb-4 pt-2 pb-3"
                >
                  <p class="small mb-0 me-2 text-muted">Filter</p>
                  <select id="select_filter" data-mdb-select-init>
                    <option value="all">All</option>
                    <option value="1">Done</option>
                    <option value="0">Upcomming</option>
                  </select>

                  <a
                    href="#!"
                    style="color: #23af89"
                    data-mdb-tooltip-init
                    title="Ascending"
                    ><i class="fas fa-sort-amount-down-alt ms-2"></i
                  ></a>
                </div>

                <div id="result"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Popperjs -->

    <!-- JavaScript -->
    <script src="date-time/js/bootstrap-datetimepicker.js"></script>
    <!-- Languages -->
    <script src="date-time/js/locales/bootstrap-datetimepicker.fr.js"></script>
    <script type="text/javascript">
      $(document).ready(function () {
        $(".default").datetimepicker({
          todayHighlight: true,
          initialDate: new Date(),
        });
        function getAllTodo(){
          $.ajax({
          url: "/filter-todos",
          success: function (e) {
            $("#result").html(e.views);
          },
        });
        }

        getAllTodo();
       

        $("#select_filter").on("change", function () {
          $.ajax({
            data: { status: $(this).val() },
            url: "/filter-todos",
            success: function (e) {
              $("#result").html(e.views);
            },
          });
        });

        $(document).on("click", ".editTodo", function () {
          console.log($(this).val());
          var id = $(this).data("id");
          $.ajax({
            url: "/edit/" + id,
            success: function (re) {
              $("#updateModal").modal("show");
              $('#updateModal').find('form').attr('action','update/'+re.id)
              $("#updateModal").find("#update_title").val(re.name);
              $("#updateModal").find("#update_due_date").val(re.due_date);
              $("#updateModal").find("#update_description").val(re.description);

              // document.getElementById("form").reset();
              //  $('#exampleModal').modal('hide');
            },
          });
        });
        $(document).on("click", ".updateStatus", function () {
          console.log($(this).val());
          $.ajax({
            url: "/update/status",
            type: "POST",
            data: { status: $(this).is(":checked"), id: $(this).data("id") },
            success: function (re) {
              // document.getElementById("form").reset();
              //  $('#exampleModal').modal('hide');
            },
          });
        });
        $("#form").on("submit", function (e) {
          e.preventDefault();
          $("input").removeClass("is-invalid");
          $("textarea").removeClass("is-invalid");
          $.ajax({
            url: $(this).attr("action"),
            type: "POST",
            data: $("#form").serialize(),
            success: function (re) {
              getAllTodo();
              document.getElementById("form").reset();
               $('#exampleModal').modal('hide');
            },
            error: function (res) {
              console.log(res.responseJSON.errors);
              let errors = res.responseJSON.errors;

              if (errors) {
                errors.forEach(function (item, index) {
                  console.log($(`#${item.path}`).addClass("is-invalid"));
                  $(`#${item.path}`)
                    .siblings(".invalid-feedback")
                    .text(item.msg);
                  console.log(item.path);
                });
              } else {
                $("#error-message")
                  .removeClass("d-none")
                  .text(res.responseJSON.message);
              }
            },
          });
        });

        $("#update_form").on("submit", function (e) {
          e.preventDefault();
          $("input").removeClass("is-invalid");
          $("textarea").removeClass("is-invalid");
          $.ajax({
            url: $(this).attr("action"),
            type: "PUT",
            data: $("#update_form").serialize(),
            success: function (re) {
              getAllTodo();
           
              document.getElementById("update_form").reset();
               $('#updateModal').modal('hide');
            },
            error: function (res) {
              console.log(res.responseJSON.errors);
              let errors = res.responseJSON.errors;

              if (errors) {
                errors.forEach(function (item, index) {
                  $(`#update_${item.path}`).addClass("is-invalid");
                  
                  $(`#update_${item.path}`)
                    .siblings(".invalid-feedback")
                    .text(item.msg);
                  console.log(item.path);
                });
              } else {

                $("#update-error-message")
                  .removeClass("d-none")
                  .text(res.responseJSON.message);
              }
            },
          });
        });

        $(document).on("click", ".deleteTodo", function () {
         var thisID = $(this);
          $.ajax({
            url: "/delete/"+$(this).data('id'),
            type: "DELETE",
            success: function (re) {
              thisID.closest('ul').remove()
              // document.getElementById("form").reset();
              //  $('#exampleModal').modal('hide');
            },
          });
        });
      });
    </script>
  </body>
</html>
